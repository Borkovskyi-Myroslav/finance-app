<div class="view">
  <p style="color: green"><%= notice %></p>

  <h1>Categories</h1>

<%# Main site of Categories %>

  <div id="categories">
    <% @categories.each do |category| %>
      <%= render category %>
      <p>
        <%= link_to "Show this category", category, class: "btn btn-outline-primary" %>
      </p>
    <% end %>
  </div>

  <%= paginate @categories %>

  <div>
    <%= link_to "New category", new_category_path, class: "btn btn-outline-success" %>
  </div>

  <br>
</div>

