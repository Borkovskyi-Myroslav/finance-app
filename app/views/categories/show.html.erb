<div class="view">
  <p style="color: green"><%= notice %></p>

<%# Show the category %>

  <%= render @category %>

  <div>
    <%= link_to "Edit this category", edit_category_path(@category), class: "btn btn-outline-success" %> |
    <%= link_to "Back to categories", categories_path, class: "btn btn-outline-primary" %>
  </div>

  <br>

  <div>
    <%= button_to "Destroy this category", @category, method: :delete, class: "btn btn-outline-danger" %>
  </div>
</div>
